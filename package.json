{
  "private": true,
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-flowtype": "3.9.1",
    "eslint-plugin-react": "7.13.0",
    "flow-bin": "^0.100.0",
    "lerna": "^3.13.1",
    "prettier": "^1.17.1"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "yarn run build && yarn run check && yarn run lint && yarn run testonly",
    "testonly": "yarn run build && lerna run test",
    "lint": "eslint --report-unused-disable-directives packages/*/src",
    "lint-check": "eslint --print-config .eslintrc.yml | eslint-config-prettier-check",
    "check": "flow check",
    "prettier": "prettier --write packages/*/src/**/*.{js,jsx}",
    "prettier-check": "prettier packages/*/src/**/*.{js,jsx}"
  },
  "workspaces": [
    "packages/*"
  ]
}
