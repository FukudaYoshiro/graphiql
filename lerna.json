{
  "packages": ["packages/*", "packages/graphiql-examples/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "preDistTag": "next",
      "distTag": "latest",
      "conventionalCommits": true
    },
    "version": {
      "ignoreChanges": ["'__tests__' '**/*.spec.js' '**/*.spec.js' '**/*.spec.ts'"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  }
}
